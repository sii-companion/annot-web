base: &default
  nextflowpath: "/home/companion/"
  nextflowscript: "/home/haessar/iii-companion/companion/annot.nf"
  locationconfig: "/home/haessar/iii-companion/companion/loc_web.local.config"
  extrinsicconfig: "/home/haessar/iii-companion/companion/data/augustus/extrinsic.cfg"
  dockerconf: ""
  rootdir: "/home/haessar/iii-companion/companion/"
  workdir: "/www/companion/work"
  tmpdir: "/tmp"
  example_job_id: ""
  keep_work_directories: false
  min_work_space: 500
  max_file_size_mb: 4000
  organism_group: "parasite"
  example_species:
    prefix: "LDON"
    name: "Leishmania donovani"
  taxon:
    example: "5691 (for T. brucei)"
    default: "5653 (Kinetoplastida)"
    id: 5653

development:
  <<: *default
  referencedirs:
    Plasmodium: "/home/haessar/iii-companion/reference-update/ref_plasmo_test"
    VectorBase: "/home/haessar/iii-companion/reference-update/ref_vectorbase5"
  weightfiles:
    Plasmodium: "/home/haessar/iii-companion/companion/data/weight/weight_plasmodium.lua"
    VectorBase: "/home/haessar/iii-companion/companion/data/weight/weight_plasmodium.lua"
  maxintronlengths:
    Plasmodium: 20000
    VectorBase: 20000
  fix_polycistrons:
    Plasmodium: "false"
    VectorBase: "false"
  do_circos: 
    Plasmodium: "true"
    VectorBase: "true"
  run_braker:
    Plasmodium: "false"
  keep_work_directories: true

production:
  <<: *default
  referencedirs:
    Kinetoplastida: "/www/companion/ref_kinetoplastids"
    Plasmodium: "/www/companion/ref_plasmodium"
  weightfiles:
    Kinetoplastida: "/home/companion/annot-nf/data/weight/weight_kinetoplastid.lua"
    Plasmodium: "/home/companion/annot-nf/data/weight/weight_plasmodium.lua"
  maxintronlengths:
    Kinetoplastida: 1
    Plasmodium: 20000
  fix_polycistrons:
    Kinetoplastida: "true"
    Plasmodium: "false"
  do_circos: 
    Kinetoplastida: "true"
    Plasmodium: "true"

test:
  <<: *default
